{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "rootDir": "./src",
    "paths": {
      "src/*": ["src/*"],
      "tests/*": ["tests/*"]
    }
  },
  "exclude": ["./node_modules", "**/*.spec.ts", "./dist/**/*"]
}
